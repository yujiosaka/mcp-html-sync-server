{
  "name": "mcp-html-sync-server",
  "version": "0.0.1",
  "description": "A real-time HTML syncing server with hot reload capabilities, built using the Model Context Protocol (MCP)",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-html-sync-server": "./bin/mcp-html-sync-server.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "config": "shx cp .env.example .env",
    "check": "biome check .",
    "check:write": "biome check --write .",
    "prepublish": "bun run build",
    "prepare": "husky",
    "start": "bun src/server.ts",
    "dev": "bun --watch src/server.ts",
    "prepublishOnly": "tsc -p tsconfig.build.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yujiosaka/mcp-html-sync-server.git"
  },
  "keywords": [
    "mcp-server",
    "mcp",
    "server",
    "static",
    "html",
    "sync",
    "hot-reload"
  ],
  "author": "Yuji Isobe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yujiosaka/mcp-html-sync-server/issues"
  },
  "homepage": "https://github.com/yujiosaka/mcp-html-sync-server#readme",
  "files": ["dist", "bin", "public", "templates"],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/bun": "latest",
    "@types/ms": "^2.1.0",
    "@types/ws": "^8.18.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "semantic-release": "^24.2.3",
    "shx": "^0.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.*": ["biome check --write --no-errors-on-unmatched"]
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "@fastify/view": "^11.0.0",
    "@fastify/websocket": "^11.0.2",
    "@modelcontextprotocol/sdk": "^1.10.2",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "handlebars": "^4.7.8",
    "ms": "^2.1.3",
    "nanoid": "^5.1.5",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "ws": "^8.18.1",
    "zod": "^3.24.3"
  }
}
